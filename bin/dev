#!/usr/bin/env bash

function check_command() {
  local cmd=$1
  local install_msg=$2
  local install_cmd=$3

  if ! command -v "$cmd" &> /dev/null; then
    if [ -n "$install_cmd" ]; then
      echo "$install_msg"
      eval "$install_cmd"
    else
      echo "$install_msg"
      exit 1
    fi
  fi
}

check_command "foreman" "Installing foreman..." "gem install foreman"

foreman start -f Procfile.dev "$@"
